<p id="notice"><%= notice %></p>

<h1>Listing Quadrants</h1>

<table>
  <thead>
    <tr>
      <th>Bracket</th>
      <th>Name</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quadrants.each do |quadrant| %>
      <tr>
        <td><%= quadrant.challenge.year %></td>
        <td><%= quadrant.name %></td>
        <td><%= quadrant.order %></td>
        <td><%= link_to 'Show', quadrant %></td>
        <td><%= link_to 'Edit', edit_quadrant_path(quadrant) %></td>
        <td><%= link_to 'Destroy', quadrant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

