<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="field col-lg-6">
      <%= f.label :home_team_id %><br>
      <%= f.select :home_team_id, TeamInstance.all.collect {|x| [x.team.name, x.id]}, {:prompt => "Select a team"} %>
    </div>
    <div class="field col-lg-6">
      <%= f.label :home_team_score %><br>
      <%= f.number_field :home_team_score %>
    </div>
  </div>
  <div class="container">
    <div class="field col-lg-6">
      <%= f.label :away_team_id %><br>
      <%= f.select :away_team_id, TeamInstance.all.collect {|x| [x.team.name, x.id]}, {:prompt => "Select a team"} %>
    </div>
    <div class="field col-lg-6">
      <%= f.label :away_team_score %><br>
      <%= f.number_field :away_team_score %>
    </div>
  </div>


  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :game_timer %><br>
    <%= f.text_field :game_timer %>
  </div>
  <div class="field">
    <%= f.label :half %><br>
    <%= f.text_field :half %>
  </div>
  <div class="field">
    <%= f.label :quadrant_id %><br>
    <%= f.grouped_collection_select :quadrant_id, Challenge.order(:year), :quadrants, :year, :id, :name, :prompt => "Select a quadrant", include_blank: true%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
