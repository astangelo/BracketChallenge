<!DOCTYPE html>
<html>
<head>
  <title>BracketChallenge</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Nav Menu -->
  
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navMan" aria-controls="navMain" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="#">Braceket Challenge</a>

    <div class="collapse navbar-collapse" id="navMain">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Bracket', root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Games', { controller: 'games', action: 'index' }, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Teams
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to 'Teams', { controller: 'teams', action: 'index' }, class: "dropdown-item" %>
            <%= link_to 'Team Instances', { controller: 'team_instances', action: 'index' }, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
  <!-- /Nav Menu -->

<%= yield %>

</body>
</html>
